{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "REPLACE_WITH_YOUR_RAILWAY_BACKEND_URL/api/:path*"
        },
        {
            "source": "/auth/:path*",
            "destination": "REPLACE_WITH_YOUR_RAILWAY_BACKEND_URL/auth/:path*"
        },
        {
            "source": "/uploads/:path*",
            "destination": "REPLACE_WITH_YOUR_RAILWAY_BACKEND_URL/uploads/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}